<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/edittext_gradient_border">

    <!-- Question Number -->
    <TextView
        android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question:"
        android:fontFamily="@font/poppinsasemibold"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <!-- Question Text (read-only) -->
    <EditText
        android:id="@+id/question_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Question text here"
        android:padding="8dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textColorHint="@color/dark_gray"
        android:focusable="false"
        android:clickable="false"
        android:background="@android:color/transparent"
        android:textIsSelectable="false" />

    <!-- Label -->
    <TextView
        android:id="@+id/answer_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer:"
        android:fontFamily="@font/poppinsasemibold"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <!-- Text Answer Field (for Identification/TrueFalse) -->
    <EditText
        android:id="@+id/answer_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter answer here"
        android:padding="8dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textColorHint="@color/dark_gray"
        android:visibility="gone" />

    <!-- Multiple Choice Options -->
    <RadioGroup
        android:id="@+id/choices_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <RadioButton
            android:id="@+id/choice_a"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Choice A"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/choice_b"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Choice B"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/choice_c"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Choice C"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/choice_d"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Choice D"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black" />
    </RadioGroup>

</LinearLayout>
